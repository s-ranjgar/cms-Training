<h1>
   ALL Posts
</h1>

<table class="table table-bordered">
<thead>
<tr>
    <th>Id</th>
    <th>File</th>
    <th>Title</th>
    <th>Category</th>
    <th>Status</th>
    <th>AllowComments</th>
    <th>Date</th>
</tr>
</thead>

    <tbody>
    {{#each posts}}
    <tr>
        <td>{{id}}</td>
        <td><img height="50" class="img-responsive" src="/uploads/{{file}}" alt =""></td>
        <td><a href="/post/{{slug}}">{{title}}</a></td>
        <td>{{category.name}}</td>
        <td>{{status}}</td>
        <td>{{allowComments}}</td>
        <td>{{generateDate date 'MMMM DD'}}</td>
        <td><a href="/post/{{slug}}" class="btn btn-info">View</a></td>
    </tr>
    {{/each}}
    </tbody>
</table>